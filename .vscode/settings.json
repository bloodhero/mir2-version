{
  // 将仓库内的 schema 关联到特定 JSON 文件
  "json.schemas": [
    {
      "fileMatch": [
        "/DB/Stditems/*.json"
      ],
      "url": "./schemas/stditems.schema.json"
    },
    {
      "fileMatch": [
        "/DB/Stditems/药水*.json"
      ],
      "url": "./schemas/stditems-potion.schema.json"
    }
  ]
}