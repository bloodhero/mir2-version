{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://example.com/mir2/stditems-potion.schema.json",
	"title": "Mir2 标准物品-药水 清单（合并通用约束）",
	"description": "药水物品的 schema；通过 allOf 同时应用通用 StdItems schema 与药水专有约束（stdmode=2）。",
	"type": "array",
	"minItems": 0,
	"items": {
		"type": "object",
		"additionalProperties": true,
		"required": ["stdmode"],
		"properties": {
			"stdmode": { "type": "integer", "enum": [2, 3], "description": "Stdmode 必须为 2 或 3（药水类标识）。" }
		}
	},
	"examples": [
		[
			{ "id": 1, "name": "小红药", "type": "hp", "stdmode": 2, "heal": { "hp": 50 }, "stack": 10 }
		]
	]
}
