{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/mir2/stditems.schema.json",
    "title": "Mir2 标准物品 清单",
    "description": "约束 DB/Stditems/*.json 的结构与字段（根据 StdItems 表结构生成）。",
    "type": "array",
    "minItems": 0,
    "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
            "idx",
            "name"
        ],
        "properties": {
            "idx": {
                "type": "integer",
                "description": "物品索引（数据库 Idx 字段）。"
            },
            "name": {
                "type": "string",
                "maxLength": 14,
                "description": "物品名称，最长 14 字符（对应 TEXT(14)）。"
            },
            "stdmode": { "type": "integer" , "description": "Stdmode 字段。"},
            "shape": { "type": "integer" , "description": "外形（Shape）。"},
            "weight": { "type": "integer" , "description": "重量（Weight）。"},
            "anicount": { "type": "integer" , "description": "动画帧数（Anicount）。"},
            "source": { "type": "integer" , "description": "Source 来源标识。"},
            "reserved": { "type": "integer" , "description": "Reserved 预留字段。"},
            "looks": { "type": "integer" , "description": "Looks 外观 ID。"},
            "duraMax": { "type": "integer" , "description": "耐久上限（DuraMax）。可用于表示堆叠数量。"},
            "ac": { "type": "integer" , "description": "物理护甲（Ac）。"},
            "ac2": { "type": "integer" , "description": "Ac2。"},
            "mac": { "type": "integer" , "description": "魔法护甲（Mac）。"},
            "mac2": { "type": "integer" , "description": "Mac2。"},
            "dc": { "type": "integer" , "description": "物理伤害（Dc）。"},
            "dc2": { "type": "integer" , "description": "Dc2。"},
            "mc": { "type": "integer" , "description": "魔法伤害（Mc）。"},
            "mc2": { "type": "integer" , "description": "Mc2。"},
            "sc": { "type": "integer" , "description": "特殊伤害（Sc）。"},
            "sc2": { "type": "integer" , "description": "Sc2。"},
            "need": { "type": "integer" , "description": "需求职业或标识（Need）。"},
            "needLevel": { "type": "integer" , "description": "需求等级（NeedLevel）。"},
            "price": { "type": "integer" , "description": "价格（Price）。"},
            "stock": { "type": "integer" , "description": "库存（Stock）。"},
            "color": { "type": "integer" , "description": "颜色（Color）。"},
            "overLap": { "type": "integer" , "description": "重叠（OverLap）。"},
            "hp": { "type": "integer" , "description": "直接加血（HP）。"},
            "mp": { "type": "integer" , "description": "直接加蓝（MP）。"},
            "light": { "type": "integer" , "description": "光照（Light）。"},
            "horse": { "type": "integer" , "description": "坐骑类型（Horse）。"},
            "element": { "type": "integer" , "description": "元素类型或标识（Element）。"},
            "expand1": { "type": "integer" , "description": "扩展字段 1（Expand1）。"},
            "expand2": { "type": "integer" , "description": "扩展字段 2（Expand2）。"},
            "expand3": { "type": "integer" , "description": "扩展字段 3（Expand3）。"},
            "expand4": { "type": "integer" , "description": "扩展字段 4（Expand4）。"},
            "expand5": { "type": "integer" , "description": "扩展字段 5（Expand5）。"},
            "insuranceCurrency": { "type": "integer" , "description": "保险货币（InsuranceCurrency）。"},
            "insuranceGold": { "type": "integer" , "description": "保险金币（InsuranceGold）。"},
            "element1": { "type": "integer" , "description": "元素 1。"},
            "element2": { "type": "integer" , "description": "元素 2。"},
            "element3": { "type": "integer" , "description": "元素 3。"},
            "element4": { "type": "integer" , "description": "元素 4。"},
            "element5": { "type": "integer" , "description": "元素 5。"},
            "element6": { "type": "integer" , "description": "元素 6。"},
            "element7": { "type": "integer" , "description": "元素 7。"},
            "element8": { "type": "integer" , "description": "元素 8。"},
            "element9": { "type": "integer" , "description": "元素 9。"},
            "element10": { "type": "integer" , "description": "元素 10。"},
            "element11": { "type": "integer" , "description": "元素 11。"},
            "element12": { "type": "integer" , "description": "元素 12。"},
            "element13": { "type": "integer" , "description": "元素 13。"},
            "element14": { "type": "integer" , "description": "元素 14。"},
            "element15": { "type": "integer" , "description": "元素 15。"},
            "element16": { "type": "integer" , "description": "元素 16。"},
            "element17": { "type": "integer" , "description": "元素 17。"},
            "element18": { "type": "integer" , "description": "元素 18。"},
            "element19": { "type": "integer" , "description": "元素 19。"},
            "element20": { "type": "integer" , "description": "元素 20。"},
            "uniqueItem": { "type": "integer" , "description": "是否为唯一物品（UniqueItem）。"},
            "itemType": { "type": "integer" , "description": "物品类型（ItemType）。"},
            "itemSet": { "type": "integer" , "description": "套装 ID（ItemSet）。"},
            "smite": { "type": "integer" , "description": "Smite 属性。"},
            "droprate": { "type": "integer" , "description": "掉落率（Droprate）。"},
            "igndef": { "type": "integer" , "description": "Igndef 字段（点燃/标记等）。"},
            "damAdd": { "type": "integer" , "description": "额外伤害（DamAdd）。"},
            "damReb": { "type": "integer" , "description": "伤害反弹（DamReb）。"},
            "dcReDu": { "type": "integer" , "description": "Dc 减免（DcReDu）。"},
            "mcReDu": { "type": "integer" , "description": "Mc 减免（McReDu）。"},
            "expAdd": { "type": "integer" , "description": "额外经验（ExpAdd）。"},
            "bind": { "type": "integer" , "description": "绑定标志（Bind）。"},
            "shine": { "type": "integer" , "description": "光效（Shine）。"},
            "reference": { "type": "integer" , "description": "参考字段（Reference）。"}
        }
    },
    "examples": [
        [
            {
                "idx": 1,
                "name": "示例武器",
                "shape": 120,
                "weight": 200,
                "duraMax": 100,
                "dc": 12,
                "price": 500
            }
        ]
    ]
}
